<?xml version="1.0" encoding="UTF-8"?>
<web-app>

    <display-name>Search Engine Web App</display-name>

    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>fall2018.cscc01.team5.searchEngineWebApp.servlets.SearchServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>UploadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/UploadServlet</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>

    <listener>
        <listener-class>
            fall2018.cscc01.team5.searchEngineWebApp.servlets.SearchEngineServletContextListener
        </listener-class>
    </listener>

</web-app>